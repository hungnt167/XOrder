<script type="text/javascript">
    //<![CDATA[
    var messagePopupClosed = false;
    function openSelectCustomerPopup() {
        var height = $('html-body').getHeight();
        $('select-customer-popup-window-mask').setStyle({'height': height + 'px'});
        toggleSelectsUnderBlock($('select-customer-popup-window-mask'), false);
        Element.show('select-customer-popup-window-mask');
        $('select-customer-popup-window').addClassName('show');
    }

    function closeSelectCustomerPopup() {
        toggleSelectsUnderBlock($('select-customer-popup-window-mask'), true);
        Element.hide('select-customer-popup-window-mask');
        $('select-customer-popup-window').removeClassName('show');
        messagePopupClosed = true;
    }

    Event.observe(window, 'load', openSelectCustomerPopup);
    Event.observe(window, 'keyup', function (evt) {
        if (messagePopupClosed) return;
        var code;
        if (evt.keyCode) code = evt.keyCode;
        else if (evt.which) code = evt.which;
        if (code == Event.KEY_ESC) {
            closeSelectCustomerPopup();
        }
    });
    //]]>
</script>
<div id="select-customer-popup-window-mask" style="display:none;"></div>
<div id="select-customer-popup-window" class="message-popup">
    <div class="message-popup-head">
        <h2><?php echo $this->getHeaderText() ?></h2>
    </div>
    <div class="message-popup-content">
        <div class="message">
            <input class="search-customer form-control" type="text"/>
        </div>
    </div>
</div>